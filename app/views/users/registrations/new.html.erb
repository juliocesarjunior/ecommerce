<%= simple_form_for(resource, html: { class: 'login-form'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="text-center">

    <%= f.error_notification %>
    <%#= resource.errors.full_messages.join(', ') %>
</div>

<div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Nome' %>
    <%= f.input :phone, input_html:{ class: "mask-phone" }, label: false, placeholder: 'Telefone' %>
    <%= f.input :email,
    required: true,
    autofocus: true,
    label: false,
    placeholder: 'E-mail',
    input_html: { autocomplete: "email" }%>
    <%= f.input :password,
    required: true,
    label: false,
    placeholder: "Senha no mínimo de #{@minimum_password_length} caracteres",
    input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
    required: true,
    label: false,
    placeholder: 'Confirmação Senha',
    input_html: { autocomplete: "new-password" } %>
</div>

<%= render 'users/shared/button_submit', f: f, text: 'Cadastre-se' %>

<% end %>

<%= render "users/shared/links" %>
