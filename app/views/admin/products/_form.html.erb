<div class="card">
	<div class="card-content">
		<div class="card-body">
			<%= simple_form_for([:admin, @product]) do |f| %>
			<%= f.error_notification %>
			<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

			<div class="form-inputs">
				<%= f.input :name %>
				<%#= f.input :image %>
				<%= f.input :description %>
				<%= f.input :price %>
				<%= f.input :publish, style: "height: 30px; width: 50px;" %>
				<%#= f.input :promo %>
				<%#= f.input :promo_price %>
				<%= f.association :category, include_blank: false, input_html: { class: "form-control form-select"},  include_blank: "Selecione uma categoria" %>
			</div>

			<div class="form-actions">
				<%= f.button :submit, 'Salvar', class: 'btn btn-info' %>
				<%= link_to "Cancelar", admin_products_path, class: 'btn btn-danger' %>
			</div>
			<% end %>
		</div>
	</div>
</div>